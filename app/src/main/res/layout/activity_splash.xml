<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/iv_txt_logo"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:src="@drawable/criketive"
        android:contentDescription="logo with text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRICKETIVE"
        android:layout_margin="10dp"
        android:paddingStart="20dp"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/iv_txt_logo"
        app:layout_constraintLeft_toLeftOf="@id/iv_txt_logo"
        />

</androidx.constraintlayout.widget.ConstraintLayout>